keywords = {Decision-making,Genetic Algorithm,Manufacturing Network Design},
pages = {37--42},
title = {{Manufacturing Network Design for Mass Customisation using a Genetic Algorithm and an Intelligent Search Method}},
url = {http://www.sciencedirect.com/science/article/pii/S221282711300214X},
volume = {7},
