file = {:E$\backslash$:/paper/mendeley/Schlick - 2009 - Cyber-Physical Systems in Factory Automation - Towards the 4th Industrial Revolution.pdf:pdf},
isbn = {978-1-4673-0692-8},
journal = {Factory Communication Systems (WFCS), 2012 9th IEEE International Workshop on},
keywords = {cyber-physical systems,industrie 4.0,industrielle revolution},
pages = {55},
title = {{Cyber-Physical Systems in Factory Automation - Towards the 4th Industrial Revolution}},
year = {2009}
}
